<UserControl x:Class="WaterTreatmentSCADA.GUI.Panels.ChlorinePumpPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border BorderBrush="#34495E" BorderThickness="2" CornerRadius="5" Padding="15" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <TextBlock Grid.Row="0" 
                      Text="Chlorine Pump Control" 
                      FontSize="20" 
                      FontWeight="Bold" 
                      Foreground="#2C3E50" 
                      Margin="0,0,0,15"/>
            
            <!-- ON/OFF Button -->
           <Grid Grid.Row="1" Margin="0,0,0,20">
                <Button x:Name="PowerButton"
                        Content="TURN ON"
                        FontSize="16"
                        FontWeight="Bold"
                        Padding="100,10"
                        Click="PowerButton_Click"
                        Background="#27AE60"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
            </Grid>
            
            <!-- Chlorine Level Display -->
            <Grid Grid.Row="2" Margin="0,0,0,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                          Text="Current Chlorine Level" 
                          FontSize="14" 
                          Foreground="#7F8C8D" 
                          Margin="0,0,0,5"/>
                
                <Border Grid.Row="1" 
                       Background="#D6EAF8" 
                       CornerRadius="5" 
                       Padding="20,15">
                    <TextBlock x:Name="ChlorineLevelText" 
                              Text="0.0 ppm" 
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="#2874A6" 
                              HorizontalAlignment="Center"/>
                </Border>
            </Grid>
            
            <!-- Dosing Rate Display -->
            <Grid Grid.Row="3" Margin="0,0,0,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                          Text="Current Dosing Rate" 
                          FontSize="14" 
                          Foreground="#7F8C8D" 
                          Margin="0,0,0,5"/>
                
                <Border Grid.Row="1" 
                       Background="#E8F8F5" 
                       CornerRadius="5" 
                       Padding="20,15">
                    <TextBlock x:Name="DosingRateText" 
                              Text="0.0%" 
                              FontSize="36" 
                              FontWeight="Bold" 
                              Foreground="#27AE60" 
                              HorizontalAlignment="Center"/>
                </Border>
            </Grid>
            
            <!-- Dosing Rate Slider -->
            <Grid Grid.Row="4" Margin="0,0,0,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                          Text="Set Dosing Rate (0-100%)" 
                          FontSize="14" 
                          Foreground="#7F8C8D" 
                          Margin="0,0,0,10"/>
                
                <Slider x:Name="DosingRateSlider" 
                       Grid.Row="1" 
                       Minimum="0" 
                       Maximum="100" 
                       Value="0" 
                       TickFrequency="10" 
                       IsSnapToTickEnabled="False"
                       ValueChanged="DosingRateSlider_ValueChanged"
                       IsEnabled="False"/>
            </Grid>
            
            <!-- Status Info -->
            <StackPanel Grid.Row="5">
                <TextBlock Text="Status Information" 
                          FontSize="14" 
                          FontWeight="Bold" 
                          Foreground="#2C3E50" 
                          Margin="0,0,0,5"/>
                <TextBlock x:Name="StatusText" 
                          Text="Pump is OFF - No chlorine dosing" 
                          FontSize="12" 
                          Foreground="#7F8C8D" 
                          TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>