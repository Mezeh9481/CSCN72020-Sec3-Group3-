<UserControl x:Class="WaterTreatmentSCADA.GUI.Panels.IntakePumpPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border BorderBrush="#34495E" BorderThickness="2" CornerRadius="5" Padding="15" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <TextBlock Grid.Row="0" 
                      Text="Intake Pump Control" 
                      FontSize="20" 
                      FontWeight="Bold" 
                      Foreground="#2C3E50" 
                      Margin="0,0,0,15"/>
            
            <!-- ON/OFF Button -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Button x:Name="PowerButton" 
                       Content="TURN ON" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Padding="20,10" 
                       Click="PowerButton_Click"
                       Background="#3498DB" 
                       Foreground="White" 
                       BorderThickness="0"/>
            </Grid>
            
            <!-- Flow Rate Display -->
            <Grid Grid.Row="2" Margin="0,0,0,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                          Text="Current Flow Rate" 
                          FontSize="14" 
                          Foreground="#7F8C8D" 
                          Margin="0,0,0,5"/>
                
                <Border Grid.Row="1" 
                       Background="#ECF0F1" 
                       CornerRadius="5" 
                       Padding="20,15">
                    <TextBlock x:Name="FlowRateText" 
                              Text="0.0%" 
                              FontSize="36" 
                              FontWeight="Bold" 
                              Foreground="#2C3E50" 
                              HorizontalAlignment="Center"/>
                </Border>
            </Grid>
            
            <!-- Flow Rate Slider -->
            <Grid Grid.Row="3" Margin="0,0,0,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                          Text="Set Flow Rate (0-100%)" 
                          FontSize="14" 
                          Foreground="#7F8C8D" 
                          Margin="0,0,0,10"/>
                
                <Slider x:Name="FlowRateSlider" 
                       Grid.Row="1" 
                       Minimum="0" 
                       Maximum="100" 
                       Value="0" 
                       TickFrequency="10" 
                       IsSnapToTickEnabled="False"
                       ValueChanged="FlowRateSlider_ValueChanged"
                       IsEnabled="False"/>
            </Grid>
            
            <!-- Status Info -->
            <StackPanel Grid.Row="4">
                <TextBlock Text="Status Information" 
                          FontSize="14" 
                          FontWeight="Bold" 
                          Foreground="#2C3E50" 
                          Margin="0,0,0,5"/>
                <TextBlock x:Name="StatusText" 
                          Text="Pump is OFF" 
                          FontSize="12" 
                          Foreground="#7F8C8D" 
                          TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>

