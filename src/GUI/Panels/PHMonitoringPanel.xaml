<UserControl x:Class="WaterTreatmentSCADA.GUI.Panels.PHMonitoringPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border BorderBrush="#34495E"
            BorderThickness="2"
            CornerRadius="5"
            Padding="15"
            Background="White">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="pH Monitoring"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       Margin="0,0,0,15"/>

            <!-- pH Value Display -->
            <Grid Grid.Row="1"
                  Margin="0,0,0,15">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Current pH Value"
                           FontSize="14"
                           Foreground="#7F8C8D"
                           Margin="0,0,0,5"/>

                <Border Grid.Row="1"
                        x:Name="PhValueBorder"
                        Background="#3498DB"
                        CornerRadius="5"
                        Padding="20,15">

                    <TextBlock x:Name="PhValueText"
                               Text="7.00"
                               FontSize="48"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                </Border>
            </Grid>

            <!-- Status Indicators -->
            <StackPanel Grid.Row="2">

                <!-- Safe Range Indicator -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Grid.Column="0"
                             x:Name="SafeRangeIndicator"
                             Width="20"
                             Height="20"
                             Fill="#2ECC71"
                             Margin="0,0,10,0"/>

                    <TextBlock Grid.Column="1"
                               x:Name="SafeRangeText"
                               Text="pH in safe range (6.5 - 8.5)"
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- Chemical Doser Status -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            x:Name="DoserStatusBorder"
                            Background="#95A5A6"
                            CornerRadius="3"
                            Padding="10,5"
                            Margin="0,0,10,0">

                        <TextBlock x:Name="DoserStatusText"
                                   Text="INACTIVE"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   FontSize="12"/>
                    </Border>

                    <TextBlock Grid.Column="1"
                               Text="Chemical Doser Status"
                               VerticalAlignment="Center"/>
                </Grid>

            </StackPanel>

        </Grid>

    </Border>
</UserControl>