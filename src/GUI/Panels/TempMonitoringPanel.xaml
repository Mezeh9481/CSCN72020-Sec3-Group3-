<UserControl x:Class="WaterTreatmentSCADA.GUI.Panels.TempMonitoringPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- SAME BORDER YOU ALREADY HAD -->
    <Border BorderBrush="#34495E"
            BorderThickness="2"
            CornerRadius="5"
            Padding="15"
            Background="White">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="Temperature Monitoring"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- NEW LAYOUT: Value + Big Icon -->
            <Grid Grid.Row="1"
                  Margin="0,0,0,15">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Temperature Display -->
                <StackPanel Grid.Column="0">

                    <TextBlock Text="Current Temperature"
                               FontSize="14"
                               Foreground="#7F8C8D"
                               Margin="0,0,0,6"/>

                    <!-- SAME NAME -->
                    <Border x:Name="TempValueBorder"
                            Background="#8E44AD"
                            CornerRadius="8"
                            Padding="15"
                            HorizontalAlignment="Left">

                        <!-- SAME NAME -->
                        <TextBlock x:Name="TempValueText"
                                   Text="7.00"
                                   FontSize="46"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </Border>
                </StackPanel>

                <!-- NEW: Big thermometer icon -->
                <StackPanel Grid.Column="1"
                            VerticalAlignment="Center"
                            Margin="25,0,0,0">

                    <Ellipse Width="60"
                             Height="60"
                             Fill="#E74C3C"/>

                    <Rectangle Width="20"
                               Height="70"
                               Fill="#E74C3C"
                               RadiusX="10"
                               RadiusY="10"
                               Margin="20,-10,20,0"/>
                </StackPanel>

            </Grid>

            <!-- Status Row -->
            <Grid Grid.Row="2"
                  Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

               
                <Ellipse x:Name="SafeRangeIndicator"
                         Width="20"
                         Height="20"
                         Fill="#2ECC71"
                         Margin="0,0,10,0"/>

              
                <TextBlock x:Name="SafeRangeText"
                           Text="Temperature in safe range (6.5 - 8.5)"
                           VerticalAlignment="Center"
                           FontSize="15"
                           Foreground="#2C3E50"/>
            </Grid>

        </Grid>
    </Border>
</UserControl>
