<UserControl x:Class="WaterTreatmentSCADA.GUI.Panels.FiltrationSensorPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border BorderBrush="#34495E" BorderThickness="2" CornerRadius="5" Padding="15" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <TextBlock Grid.Row="0" 
                      Text="Filtration Sensor" 
                      FontSize="20" 
                      FontWeight="Bold" 
                      Foreground="#2C3E50" 
                      Margin="0,0,0,15"/>
            
            <!-- Turbidity Gauge -->
            <Grid Grid.Row="1" Margin="0,0,0,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                          Text="Current Turbidity" 
                          FontSize="14" 
                          Foreground="#7F8C8D" 
                          Margin="0,0,0,5"/>
                
                <Border Grid.Row="1" 
                       x:Name="TurbidityGaugeBorder" 
                       Background="#2ECC71" 
                       CornerRadius="5" 
                       Padding="20,15">
                    <Grid>
                        <TextBlock x:Name="TurbidityValueText" 
                                  Text="0.0 NTU" 
                                  FontSize="48" 
                                  FontWeight="Bold" 
                                  Foreground="White" 
                                  HorizontalAlignment="Center"/>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Threshold Indicators -->
            <Grid Grid.Row="2" Margin="0,0,0,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                          Text="Threshold Status" 
                          FontSize="14" 
                          Foreground="#7F8C8D" 
                          Margin="0,0,0,10"/>
                
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <!-- Green Zone -->
                    <Border Background="#2ECC71" 
                           CornerRadius="3" 
                           Padding="10,5" 
                           Margin="0,0,5,0">
                        <TextBlock Text="&lt; 3 NTU" 
                                  FontSize="12" 
                                  FontWeight="Bold" 
                                  Foreground="White"/>
                    </Border>
                    
                    <!-- Yellow Zone -->
                    <Border Background="#F39C12" 
                           CornerRadius="3" 
                           Padding="10,5" 
                           Margin="0,0,5,0">
                        <TextBlock Text="3-5 NTU" 
                                  FontSize="12" 
                                  FontWeight="Bold" 
                                  Foreground="White"/>
                    </Border>
                    
                    <!-- Red Zone -->
                    <Border Background="#E74C3C" 
                           CornerRadius="3" 
                           Padding="10,5">
                        <TextBlock Text="&gt; 5 NTU" 
                                  FontSize="12" 
                                  FontWeight="Bold" 
                                  Foreground="White"/>
                    </Border>
                </StackPanel>
            </Grid>
            
            <!-- Alert Banner -->
            <Border Grid.Row="3" 
                   x:Name="AlertBanner" 
                   Background="#E74C3C" 
                   CornerRadius="5" 
                   Padding="15,10" 
                   Margin="0,0,0,15"
                   Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                              Text="⚠️" 
                              FontSize="24" 
                              Margin="0,0,10,0"/>
                    
                    <TextBlock Grid.Column="1" 
                              x:Name="AlertText" 
                              Text="High Turbidity Alert!" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Foreground="White" 
                              VerticalAlignment="Center"/>
                </Grid>
            </Border>
            
            <!-- Status Info -->
            <StackPanel Grid.Row="4">
                <TextBlock Text="Sensor Information" 
                          FontSize="14" 
                          FontWeight="Bold" 
                          Foreground="#2C3E50" 
                          Margin="0,0,0,5"/>
                <TextBlock x:Name="StatusText" 
                          Text="Turbidity: 0.0 NTU" 
                          FontSize="12" 
                          Foreground="#7F8C8D" 
                          Margin="0,0,0,5"/>
                <TextBlock x:Name="ThresholdText" 
                          Text="Alert Threshold: 5.0 NTU" 
                          FontSize="12" 
                          Foreground="#7F8C8D"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>

