<UserControl x:Class="WaterTreatmentSCADA.GUI.Panels.PressureMonitoringPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border BorderBrush="#34495E"
            BorderThickness="2"
            CornerRadius="5"
            Padding="15"
            Background="White">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Pressure Monitoring"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       Margin="0,0,0,15"/>

            <!-- Digital-style pressure display -->
            <Border Grid.Row="1"
                    x:Name="PressureValueBorder"
                    Background="#2C2C2C"
                    CornerRadius="6"
                    Padding="12"
                    BorderBrush="#4F4F4F"
                    BorderThickness="2"
                    Margin="0,0,0,20"
                    Width="250"
                    HorizontalAlignment="Left">

                <TextBlock x:Name="PressureValueText"
                           Text="2.30 bar"
                           FontSize="38"
                           FontWeight="Bold"
                           Foreground="#A8FFBF"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontFamily="Consolas"/>
            </Border>

            <!-- Status Line -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">

                <Ellipse Width="16" Height="16"
                         x:Name="PressureIndicator"
                         Fill="#2ECC71"
                         Margin="0,0,8,0"/>

                <TextBlock x:Name="PressureStatusText"
                           Text="Normal Pressure"
                           VerticalAlignment="Center"
                           Foreground="#2C3E50"
                           FontSize="14"/>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>