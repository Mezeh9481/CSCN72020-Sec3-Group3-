<Window x:Class="WaterTreatmentSCADA.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:panels="clr-namespace:WaterTreatmentSCADA.GUI.Panels"
        Title="Water Treatment Plant SCADA System"
        Height="800" Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- Header -->
            <RowDefinition Height="*"/>      <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15" Margin="0,0,0,10">
            <TextBlock Text="Water Treatment Plant SCADA/HMI System"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"/>
        </Border>

        <!-- Vertical Panels -->
         <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="0,0,0,10">

                <StackPanel Grid.Row="1"
                            Orientation="Vertical"
                            Margin="0,0,20,10"
                            VerticalAlignment="Top">
                    <panels:IntakePumpPanel x:Name="intakePumpPanel"
                                            Margin="0,0,0,20"/>

                    <panels:WaterStoragePanel x:Name="waterStoragePanel"
                                            Margin="0,0,0,20"/>

                    <panels:PHMonitoringPanel x:Name="phMonitoringPanel"
                                            Margin="0,0,0,20"/>

                    <panels:FiltrationSensorPanel x:Name="filtrationSensorPanel"
                                                Margin="0,0,0,20"/>

                </StackPanel>

        </ScrollViewer>
    </Grid>
</Window>